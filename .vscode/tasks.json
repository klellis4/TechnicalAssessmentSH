{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "dotnet test with coverage",
            "type": "process",
            "command": "dotnet",
            "args": [
                "test",
                "/p:CollectCoverage=true",
                "/p:CoverletOutputFormat=\"opencover,lcov\"",
                "/p:CoverletOutput=../../lcov"
            ],
            "problemMatcher": [],
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}